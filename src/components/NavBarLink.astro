---
import type { Props } from "@astrojs/starlight/props";
import { MenuData } from "../constants";
---

<section>
  {
    MenuData.map((menu) => {
      // let slot = null;
      // if (menu?.link) {
      //   slot = <a href={menu.link}>{menu.label}</a>;
      // }

      return (
        <div class="dropdown">
          <button class="dropbtn">{menu.label}</button>
          <div class="dropdown-content">
            {menu.items.map((item) => (
              <a href={item.link}>{item.label}</a>
            ))}
          </div>
        </div>
      );
    })
  }
</section>

<style>
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropbtn {
    padding: 10px;
    border: none;
    cursor: pointer;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: #fff;
    min-width: 12rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    z-index: 1;
  }

  .dropdown-content a {
    display: block;
    padding: 0.5rem;
    text-decoration: none;
    cursor: pointer;
    border-radius: 0.375rem;
  }

  .dropdown-content a:hover {
    color: #fff;
    background-color: var(--sl-color-accent);
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown:hover .dropbtn {
    background-color: var(--sl-color-accent-low);
    border-radius: 0.375rem;
  }
</style>
