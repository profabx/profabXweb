---
import type { Props } from "@astrojs/starlight/props";
import { MenuData } from "../constants";
---

<section>
  <div class="flex flex-row gap-4">
    {
      MenuData.map((menu) => {
        return (
          <div class="dropdown">
            <button class="dropdown-button hover:ring-1 hover:ring-blue-500 focus:ring-2">
              {menu?.link ? (
                <a
                  href={menu.link}
                  class="no-underline text-black dark:text-white"
                >
                  {menu.label}
                </a>
              ) : (
                <>{menu.label}</>
              )}
            </button>

            {menu?.items && (
              <div class="dropdown-content">
                {(menu?.items ?? []).map((item) => (
                  <a href={item.link}>{item.label}</a>
                ))}
              </div>
            )}
          </div>
        );
      })
    }
  </div>
</section>

<style>
  :root {
    --blue-ribbon-50: 237 247 255;
    --blue-ribbon-100: 214 236 255;
    --blue-ribbon-200: 181 223 255;
    --blue-ribbon-300: 131 204 255;
    --blue-ribbon-400: 72 175 255;
    --blue-ribbon-500: 30 138 255;
    --blue-ribbon-600: 6 105 255;
    --blue-ribbon-700: 0 84 255;
    --blue-ribbon-800: 8 65 197;
    --blue-ribbon-900: 13 60 155;
    --blue-ribbon-950: 14 37 93;
  }
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-button {
    padding: 8px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    background-color: var(--sl-color-bg-nav);
  }
  .dropdown-button a {
    color: var(--sl-color-white);
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: var(--sl-color-black);
    min-width: 12rem;
    border: 1px solid rgb(var(--blue-ribbon-200));
    border-radius: 0.375rem;
    z-index: 1;
  }

  .dropdown-content a {
    display: block;
    padding: 0.5rem;
    text-decoration: none;
    cursor: pointer;
    border-radius: 0.375rem;
    color: inherit;
  }

  .dropdown-content a:hover {
    color: var(--sl-color-black);
    background-color: rgba(var(--blue-ribbon-700));
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown:hover .dropdown-button {
    background-color: rgb(var(--blue-ribbon-100));
    color: var(--sl-color-white);
    border-radius: 0.375rem;
  }
</style>
